server {
    listen       80;
    listen       [::]:80;
    server_name  localhost lighthouse.local;

    access_log /var/log/nginx/{{ lighthouse_dir }}-access.log main;
    
    location / {
    root         {{ lighthouse_path }}{{ lighthouse_dir }}/;
    index        index.html;
    autoindex on;
    autoindex_exact_size off;

    }

    error_page 404 /404.html;
    location = /404.html {
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
    }
}